<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="7">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical"
        android:weightSum="4">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/text"
                android:textSize="20dp"
                android:gravity="right"/>
        </LinearLayout>
        <EditText
            android:id="@+id/edit"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:inputType="text"
            android:maxLines="1"
            android:gravity="right"
            android:background="@null"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:textCursorDrawable="@drawable/cursor" />
        <TextView
            android:layout_marginRight="10dp"
            android:id="@+id/flag"
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="right"
            android:textSize="15dp"
            android:textColor="@color/black"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="7">
        <Button
            android:id="@+id/k1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/buttonstyle_operators"
            android:text="("
            android:textSize="25dp"
            android:textColor="@color/gray_word"/>
        <Button
            android:id="@+id/k2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/buttonstyle_operators"
            android:text=")"
            android:textSize="25dp"
            android:textColor="@color/gray_word" />
        <Button
            android:id="@+id/jiecheng"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/buttonstyle_operators"
            android:text="x!"
            android:textAllCaps="false"
            android:textSize="20dp"
            android:textColor="@color/gray_word"/>
        <Button
            android:id="@+id/c"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/buttonstyle_operator"
            android:textColor="@color/blue"
            android:text="C"
            android:textSize="20dp" />
        <Button
            android:id="@+id/multiply"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/buttonstyle_operator"
            android:text="×"
            android:textSize="30dp"
            android:textColor="@color/blue"/>
        <Button
            android:id="@+id/divide"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/buttonstyle_operator"
            android:text="÷"
            android:textSize="30dp"
            android:textColor="@color/blue"/>
        <ImageButton
            android:id="@+id/remove"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/buttonstyle_operator"
            android:src="@drawable/remove_small"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="7">
        <Button
            android:id="@+id/x2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="x^2"
            android:textSize="20dp"
            android:textColor="@color/gray_word"
            android:textAllCaps="false"
            android:background="@drawable/buttonstyle_operators"/>
        <Button
            android:id="@+id/x3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="x^3"
            android:textSize="20dp"
            android:textColor="@color/gray_word"
            android:textAllCaps="false"
            android:background="@drawable/buttonstyle_operators"/>
        <Button
            android:id="@+id/xy"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="x^y"
            android:textSize="20dp"
            android:textColor="@color/gray_word"
            android:textAllCaps="false"
            android:background="@drawable/buttonstyle_operators" />
        <Button
            android:id="@+id/button7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/buttonstyle_number"
            android:text="7"
            android:textColor="@color/black"
            android:textSize="20dp" />
        <Button
            android:id="@+id/button8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="8"
            android:background="@drawable/buttonstyle_number"
            android:textColor="@color/black"
            android:textSize="20dp"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/button9"
            android:background="@drawable/buttonstyle_number"
            android:layout_weight="1"
            android:text="9"
            android:textColor="@color/black"
            android:textSize="20dp"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/minus"
            android:background="@drawable/buttonstyle_operator"
            android:text="—"
            android:textSize="20dp"
            android:textColor="@color/blue"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="7">
        <Button
            android:id="@+id/x_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="√x"
            android:textSize="20dp"
            android:textColor="@color/gray_word"
            android:textAllCaps="false"
            android:background="@drawable/buttonstyle_operators"
            />
        <Button
            android:id="@+id/x_y"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="√(y)x"
            android:textSize="20dp"
            android:textColor="@color/gray_word"
            android:textAllCaps="false"
            android:background="@drawable/buttonstyle_operators"/>
        <Button
            android:id="@+id/π"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="π"
            android:textColor="@color/gray_word"
            android:textSize="20dp"
            android:background="@drawable/buttonstyle_operators"
            android:textAllCaps="false"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/button4"
            android:background="@drawable/buttonstyle_number"
            android:text="4"
            android:textSize="20dp"
            android:textColor="@color/black"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/button5"
            android:text="5"
            android:textSize="20dp"
            android:background="@drawable/buttonstyle_number"
            android:textColor="@color/black"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/button6"
            android:text="6"
            android:background="@drawable/buttonstyle_number"
            android:textColor="@color/black"
            android:textSize="20dp"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/plus"
            android:background="@drawable/buttonstyle_operator"
            android:text="+"
            android:textSize="25dp"
            android:textColor="@color/blue"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:weightSum="7">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:orientation="vertical"
            android:weightSum="2">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:weightSum="6">
                <Button
                    android:id="@+id/ln"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="ln"
                    android:textAllCaps="false"
                    android:textSize="20dp"
                    android:textColor="@color/gray_word"
                    android:background="@drawable/buttonstyle_operators"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/log"
                    android:background="@drawable/buttonstyle_operators"
                    android:text="log"
                    android:textColor="@color/gray_word"
                    android:textSize="20dp"
                    android:textAllCaps="false"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/e"
                    android:text="e"
                    android:textSize="20dp"
                    android:textColor="@color/gray_word"
                    android:background="@drawable/buttonstyle_operators"
                    android:textAllCaps="false"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/buttonstyle_number"
                    android:id="@+id/button1"
                    android:text="1"
                    android:textSize="20dp"
                    android:textColor="@color/black"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/buttonstyle_number"
                    android:id="@+id/button2"
                    android:text="2"
                    android:textSize="20dp"
                    android:textColor="@color/black"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/buttonstyle_number"
                    android:id="@+id/button3"
                    android:text="3"
                    android:textSize="20dp"
                    android:textColor="@color/black"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:weightSum="6">
                <Button
                    android:id="@+id/sin"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="sin"
                    android:textSize="20dp"
                    android:textAllCaps="false"
                    android:textColor="@color/gray_word"
                    android:background="@drawable/buttonstyle_operators"/>
                <Button
                    android:id="@+id/cos"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="cos"
                    android:textSize="20dp"
                    android:textAllCaps="false"
                    android:textColor="@color/gray_word"
                    android:background="@drawable/buttonstyle_operators"/>
                <Button
                    android:id="@+id/tan"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="tan"
                    android:textSize="20dp"
                    android:textAllCaps="false"
                    android:textColor="@color/gray_word"
                    android:background="@drawable/buttonstyle_operators"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/buttonstyle_number"
                    android:id="@+id/percent"
                    android:text="%"
                    android:textSize="20dp"
                    android:textColor="@color/black"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/buttonstyle_number"
                    android:id="@+id/button0"
                    android:text="0"
                    android:textSize="20dp"
                    android:textColor="@color/black"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/buttonstyle_number"
                    android:id="@+id/point"
                    android:text="."
                    android:textSize="20dp"
                    android:textColor="@color/black"/>
            </LinearLayout>
        </LinearLayout>
        <Button
            android:id="@+id/equal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/buttonstyle_equal"
            android:text="="
            android:textSize="30dp"
            android:textColor="@color/white"/>
    </LinearLayout>
</LinearLayout>